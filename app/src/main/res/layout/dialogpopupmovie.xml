<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:context=".Constant" >
	<ImageView
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_centerHorizontal="true"
   		android:background="@drawable/movie_play_bg1"/>
	<LinearLayout
	    android:id="@+id/rl"
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_centerHorizontal="true"
   		android:layout_centerVertical="true"
   		android:orientation="vertical"
   		android:background="#7E7F81">
   		<Button android:id="@+id/movieplay"
            android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="1dp"
		     android:background="@drawable/movieplay" 
		     />
		<Button android:id="@+id/movieadd"
            android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginBottom="1dp"
		     android:background="@drawable/movieadd" 
		     />
		
	</LinearLayout>
	<ImageView
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_centerHorizontal="true"
   		android:layout_alignParentBottom="true"
   		android:background="@drawable/movie_play_bg2"/>
</RelativeLayout>
