<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" android:background="@drawable/main_bg">
	
	<ImageView
	    android:id="@+id/tel"
	    android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="10dp"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true">
	</ImageView>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="15dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
	    	
	<RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <ImageView android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:src="@drawable/view_show_back">
		</ImageView>
        <LinearLayout 
		    android:layout_width="745dp"
		    android:layout_height="487dp"
		    android:layout_gravity="center"
		    android:orientation="horizontal" >
			<ImageView
			    android:id="@+id/imgPop"
		   	    android:layout_width="299dp"
		   		android:layout_height="427dp"
		   		android:layout_marginLeft="1dp"
		   		android:layout_marginTop="40dp"
		   		android:scaleType="fitXY"/>
			<RelativeLayout
			    android:id="@+id/rl"
			    android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:orientation="vertical">
				<TextView 
				    android:id="@+id/menuTitle"
			   	    android:layout_width="250dp"
			   		android:layout_height="30dp"
			   		android:layout_marginLeft="80dp"
			   		android:layout_marginTop="77dp"
			   		android:textSize="16sp"
			   		android:textColor="#51c864"
			   		/>
				<LinearLayout
				    android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:orientation="horizontal">
					<TextView 
					    android:id="@+id/txtDate"
				   	    android:layout_width="250dp"
				   		android:layout_height="wrap_content"
				   		android:layout_marginLeft="90dp"
				   		android:layout_marginTop="143dp"
				   		android:textSize="12sp"
				   		android:textColor="#9F9F9F"
				   		/>
					
				</LinearLayout>
				<LinearLayout
				    android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:orientation="horizontal">
					<TextView 
					    android:id="@+id/txtAge"
				   	    android:layout_width="250dp"
				   		android:layout_height="wrap_content"
				   		android:layout_marginLeft="90dp"
				   		android:layout_marginTop="164dp"
				   		android:textSize="12sp"
				   		android:textColor="#9F9F9F"
				   		/>
					
				</LinearLayout>
				<TextView 
				    android:id="@+id/txtDirector"
			   	    android:layout_width="250dp"
			   		android:layout_height="wrap_content"
			   		android:layout_marginLeft="90dp"
			   		android:layout_marginTop="185dp"
			   		android:textSize="12sp"
			   		android:textColor="#9F9F9F"
			   		/>
				<TextView 
				    android:id="@+id/txtCast"
			   	    android:layout_width="250dp"
			   		android:layout_height="wrap_content"
			   		android:layout_marginLeft="90dp"
			   		android:layout_marginTop="206dp"
			   		android:textSize="12sp"
			   		android:textColor="#9F9F9F"
			   		/>
				<TextView 
				    android:id="@+id/txtStory"
			   	    android:layout_width="250dp"
			   		android:layout_height="wrap_content"
			   		android:layout_marginLeft="90dp"
			   		android:layout_marginTop="227dp"
			   		android:textSize="12sp"
			   		android:textColor="#9F9F9F"
			   		/>
			</RelativeLayout>
		</LinearLayout>
        
		<LinearLayout
	        android:id="@+id/middleLayout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
        	android:layout_centerVertical="true"
	        android:orientation="horizontal">
	        
